{
	"compilerOptions":
	{

		"target": "es6",
		"module": "commonjs",

		"sourceMap": true,
		"strict": true,
		"noImplicitAny": true,

		"baseUrl": "resources/assets",
		"paths": {

			"hs/*": [ "ts/hs/*", "sass/hs/*" ],
			"style/*": [ "sass/*" ],
			"script/*": [ "ts/*" ],

			"images/*": [ "images/*" ]
		},

		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,

		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true
	}
}
