{
	"compilerOptions":
	{

		"target": "es6",
		"module": "commonjs",

		"sourceMap": true,
		"strict": true,
		"noImplicitAny": true,

		"baseUrl": "resources/assets",
		"paths": {

			"hs/*": [ "ts/hs/*", "sass/hs/*" ],
			"styles/*": [ "sass/*" ],
			"scripts/*": [ "ts/*" ],

			"images/*": [ "images/*" ]
		},

		"esModuleInterop": true,

		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,

		"types": [],
		"skipLibCheck": true
	},
	"exclude": [
		"node_modules"
	]
}
